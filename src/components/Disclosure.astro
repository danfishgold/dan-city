---
const { summary } = Astro.props;
---

<details>
  <summary>{summary}</summary>
  <div class="details-details"><slot /></div>
</details>

<style>
  details {
    background: white;
    position: relative;
    border: 2px dashed black;
    border-radius: 4px;

    & summary {
      padding: 1rem;
      list-style: none;
      cursor: pointer;

      &::-webkit-details-marker,
      &::marker {
        display: none;
      }

      &::before {
        content: "◀︎";
        margin-inline-end: 0.5rem;
        transform: rotate(0);
        transition: transform 0.25s;
        display: inline-block;
      }

      &:hover {
        background: pink;
      }
    }

    &[open] {
      summary::before {
        transform: rotate(-90deg);
      }
    }

    & .details-details {
      padding: 0 1rem 1rem;
      margin-top: 0.5rem;
      margin-bottom: -1rem;
    }
  }
</style>
